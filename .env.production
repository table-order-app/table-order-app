# 本番環境設定（フロントエンドアプリ共通）

# Backend API設定
VITE_API_BASE_URL=https://your-app-runner-domain.region.awsapprunner.com/api

# アプリケーション個別設定
VITE_PORT_TABLE=5173
VITE_PORT_ADMIN=5174
VITE_PORT_KITCHEN=5175
VITE_PORT_STAFF=5176

# 本番環境設定
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# Table App固有設定（本番環境では実際のテーブル番号を設定）
VITE_TABLE_NUMBER=1

# 監視・分析設定
# VITE_ANALYTICS_ID=your-google-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn-for-frontend

# CDN設定（必要に応じて）
# VITE_CDN_URL=https://your-cloudfront-domain.cloudfront.net

# 外部サービス設定
# VITE_PAYMENT_PUBLIC_KEY=your-payment-service-public-key