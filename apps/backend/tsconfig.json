{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/index.ts", "src/db/index.ts", "src/db/schema/*.ts", "src/utils/logger*.ts"],
  "exclude": ["node_modules", "dist", "src/db/seed.ts", "src/db/migrate.ts", "src/scripts/**/*", "src/utils/s3.ts", "src/utils/r2.ts"]
}
