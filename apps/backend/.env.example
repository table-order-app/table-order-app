# データベース接続
DATABASE_URL="postgresql://user:password@localhost:5432/tableorder"

# JWT設定（本番では256bit（32文字）以上の強力な秘密鍵を設定）
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-32-characters"

# サーバー設定
PORT=3000
NODE_ENV=development

# CORS設定（開発環境用）
# 本番環境では実際のフロントエンドURLを設定
ALLOWED_ORIGINS="http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004"

# ログレベル
LOG_LEVEL=info

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
