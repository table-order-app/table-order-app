# データベース設定（必須）
DATABASE_URL=postgres://username:password@host:port/database

# App Runner設定
PORT=8080
NODE_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=info

# CORS設定（本番環境）
ALLOWED_ORIGINS=https://admin.yourdomain.com,https://kitchen.yourdomain.com,https://staff.yourdomain.com

# AWS S3設定（画像アップロード用）
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=your-bucket-name
CLOUDFRONT_URL=https://your-cloudfront-domain.net

# AWS認証（App RunnerのIAMロール使用推奨）
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# JWT設定
JWT_SECRET=your-super-secret-jwt-key

# アプリケーション設定
BCRYPT_ROUNDS=12