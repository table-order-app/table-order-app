# データベース設定（必須）
DATABASE_URL=postgres://username:password@host:port/database

# サーバー設定
PORT=3000
NODE_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=info

# CORS設定（本番環境）
ALLOWED_ORIGINS=https://admin.yourdomain.com,https://kitchen.yourdomain.com,https://staff.yourdomain.com

# 画像アップロード設定（ローカルストレージのみ）
# AWS S3機能は削除されました

# JWT設定
JWT_SECRET=your-super-secret-jwt-key

# アプリケーション設定
BCRYPT_ROUNDS=12